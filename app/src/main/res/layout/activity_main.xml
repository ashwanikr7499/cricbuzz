<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    android:background="@drawable/cric"
    tools:context="com.example.win10.cricbuzz.MainActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"


            android:layout_weight="1">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffff"

                android:text="Team A"

                android:textSize="30sp"
                android:layout_marginLeft="0dp"

                />
            <TextView
                android:id="@+id/Ascore_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#0000ff"
                android:text="0"
                android:layout_marginLeft="48dp"
                android:textSize="20sp"
                />
            <Button
                android:layout_width="96dp"
                android:layout_height="50dp"
                android:onClick="Aplus1"
                android:text="1" />
            <Button
                android:layout_width="96dp"
                android:layout_height="50dp"
                android:onClick="Aplus2"
                android:text="2" />
            <Button
                android:layout_width="96dp"
                android:layout_height="50dp"
                android:onClick="Aplus3"
                android:text="3" />

            <Button
                android:layout_width="96dp"
                android:layout_height="50dp"
                android:onClick="Aplus4"
                android:text="4" />
            <Button
                android:layout_width="96dp"
                android:layout_height="50dp"
                android:onClick="Aplus6"
                android:text="6" />
            <Button
                android:layout_width="96dp"
                android:layout_height="64dp"
                android:onClick="AplusW"
                android:text="W"
                android:textColor="#ff0000"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:text="Team B"
                android:layout_marginLeft="0dp"
                android:textSize="30sp"
                android:layout_weight="1"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                            <TextView
                                android:id="@+id/Bscore_text_view"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="20sp"
                                android:textColor="#0000ff"
                                android:text="0"
                                android:layout_marginLeft="10dp"
                                />
                            <TextView
                                android:id="@+id/Bwicket0-_text_view"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="20sp"
                                android:textColor="#0000ff"
                                android:text="0"
                                android:layout_marginLeft="48dp"
                                />
            </LinearLayout>

            <Button
                android:layout_width="96dp"
                android:layout_height="50dp"
                android:onClick="Bplus1"
                android:text="1" />
            <Button
                android:layout_width="96dp"
                android:layout_height="50dp"
                android:onClick="Bplus2"
                android:text="2" />
            <Button
                android:layout_width="96dp"
                android:layout_height="50dp"
                android:onClick="Bplus3"
                android:text="3" />
            <Button
                android:layout_width="96dp"
                android:layout_height="50dp"
                android:onClick="Bplus4"
                android:text="4" />
            <Button
                android:layout_width="96dp"
                android:layout_height="50dp"
                android:onClick="Bplus6"
                android:text="6" />
            <Button
                android:layout_width="96dp"
                android:layout_height="64dp"
                android:onClick="BplusW"
                android:textColor="#ff0000"
                android:text="W" />
        </LinearLayout>
    </LinearLayout>
    <Button
        android:onClick="Reset"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:text="RESET"
        android:textStyle="bold"
        android:textSize="32sp"
        android:background="#FF0000"
        >
    </Button>
</LinearLayout>


